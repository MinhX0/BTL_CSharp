@model backend.ViewModels.Account.OrderDetailViewModel
@using System.Globalization
@{
    ViewData["Title"] = "Chi tiết đơn hàng #" + Model.OrderId;
    string FormatPrice(long value) => value.ToString("N0", new CultureInfo("vi-VN")) + " ₫";
    
    string GetStatusBadgeClass(string status)
    {
        return status switch
        {
            "Pending" => "badge-warning",
            "Processing" => "badge-info",
            "Completed" => "badge-success",
            "Cancelled" => "badge-danger",
            _ => "badge-secondary"
        };
    }
    
    string GetStatusText(string status)
    {
        return status switch
        {
            "Pending" => "Chờ xử lý",
            "Processing" => "Đang xử lý",
            "Completed" => "Hoàn thành",
            "Cancelled" => "Đã hủy",
            _ => status
        };
    }
}

<!-- Page Header Start -->
<div class="container-fluid bg-secondary mb-5">
    <div class="d-flex flex-column align-items-center justify-content-center" style="min-height: 200px">
        <h1 class="font-weight-semi-bold text-uppercase mb-3">Chi tiết đơn hàng</h1>
        <div class="d-inline-flex">
            <p class="m-0"><a asp-controller="Store" asp-action="Index">Trang chủ</a></p>
            <p class="m-0 px-2">-</p>
            <p class="m-0"><a asp-controller="Account" asp-action="MyAccount">Tài khoản</a></p>
            <p class="m-0 px-2">-</p>
            <p class="m-0">Đơn hàng #@Model.OrderId</p>
        </div>
    </div>
</div>
<!-- Page Header End -->

<div class="container-fluid pt-5">
    <div class="row px-xl-5">
        <div class="col-lg-8">
            <!-- Order Items -->
            <div class="card border-secondary mb-5">
                <div class="card-header bg-secondary border-0">
                    <h4 class="font-weight-semi-bold m-0">Sản phẩm trong đơn hàng</h4>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-bordered text-center mb-0">
                            <thead class="bg-secondary text-dark">
                                <tr>
                                    <th>Sản phẩm</th>
                                    <th>Đơn giá</th>
                                    <th>Số lượng</th>
                                    <th>Thành tiền</th>
                                </tr>
                            </thead>
                            <tbody class="align-middle">
                                @if (Model.Items == null || !Model.Items.Any())
                                {
                                    <tr>
                                        <td colspan="4" class="text-center text-muted">Không có sản phẩm nào.</td>
                                    </tr>
                                }
                                else
                                {
                                    @foreach (var item in Model.Items)
                                    {
                                        <tr>
                                            <td class="align-middle text-left">
                                                <div class="d-flex align-items-center">
                                                    <img src="@Url.Content(item.ProductImage ?? "~/template/img/product-1.jpg")" alt="@item.ProductName" style="width: 80px; height: 80px; object-fit: contain;" class="mr-3">
                                                    <div>
                                                        <a asp-controller="Store" asp-action="Detail" asp-route-id="@item.ProductId" class="text-dark font-weight-medium">@item.ProductName</a>
                                                    </div>
                                                </div>
                                            </td>
                                            <td class="align-middle">@FormatPrice(item.Price)</td>
                                            <td class="align-middle">@item.Quantity</td>
                                            <td class="align-middle">@FormatPrice(item.LineTotal)</td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="col-lg-4">
            <!-- Order Summary -->
            <div class="card border-secondary mb-4">
                <div class="card-header bg-secondary border-0">
                    <h4 class="font-weight-semi-bold m-0">Thông tin đơn hàng</h4>
                </div>
                <div class="card-body">
                    <div class="d-flex justify-content-between mb-2">
                        <p class="mb-0"><strong>Mã đơn hàng:</strong></p>
                        <p class="mb-0">#@Model.OrderId</p>
                    </div>
                    <div class="d-flex justify-content-between mb-2">
                        <p class="mb-0"><strong>Ngày đặt:</strong></p>
                        <p class="mb-0">@Model.OrderDate.ToString("dd/MM/yyyy HH:mm")</p>
                    </div>
                    <div class="d-flex justify-content-between mb-2">
                        <p class="mb-0"><strong>Trạng thái:</strong></p>
                        <p class="mb-0">
                            <span class="badge @GetStatusBadgeClass(Model.Status)">@GetStatusText(Model.Status)</span>
                        </p>
                    </div>
                    <div class="d-flex justify-content-between mb-2">
                        <p class="mb-0"><strong>Phương thức thanh toán:</strong></p>
                        <p class="mb-0">@(Model.PaymentMethod == "CashOnDelivery" ? "Thanh toán khi nhận hàng" : Model.PaymentMethod)</p>
                    </div>
                    <hr class="mt-3 mb-3">
                    <div class="d-flex justify-content-between">
                        <h5 class="font-weight-bold">Tổng cộng:</h5>
                        <h5 class="font-weight-bold text-primary">@FormatPrice(Model.TotalAmount)</h5>
                    </div>
                </div>
            </div>

            <!-- Shipping Information -->
            <div class="card border-secondary mb-4">
                <div class="card-header bg-secondary border-0">
                    <h4 class="font-weight-semi-bold m-0">Thông tin giao hàng</h4>
                </div>
                <div class="card-body">
                    <p class="mb-2"><strong>Người nhận:</strong> @Model.CustomerName</p>
                    <p class="mb-2"><strong>Email:</strong> @Model.CustomerEmail</p>
                    <p class="mb-2"><strong>Điện thoại:</strong> @Model.CustomerPhone</p>
                    <p class="mb-0"><strong>Địa chỉ:</strong> @(Model.ShippingAddress ?? "Chưa có địa chỉ")</p>
                </div>
            </div>

            <!-- Actions -->
            <div class="d-flex flex-column">
                <a asp-controller="Account" asp-action="MyAccount" class="btn btn-outline-primary btn-block mb-2">
                    <i class="fas fa-arrow-left mr-2"></i>Quay lại đơn hàng của tôi
                </a>
                @if (Model.Status == "Pending")
                {
                    <button type="button" class="btn btn-danger btn-block" onclick="if(confirm('Bạn có chắc muốn hủy đơn hàng này?')) { document.getElementById('cancelForm').submit(); }">
                        <i class="fas fa-times-circle mr-2"></i>Hủy đơn hàng
                    </button>
                    <form id="cancelForm" asp-controller="Account" asp-action="CancelOrder" asp-route-id="@Model.OrderId" method="post" class="d-none">
                        @Html.AntiForgeryToken()
                    </form>
                }
                <a asp-controller="Store" asp-action="Shop" class="btn btn-primary btn-block">
                    <i class="fas fa-shopping-bag mr-2"></i>Tiếp tục mua sắm
                </a>
            </div>
        </div>
    </div>
</div>
