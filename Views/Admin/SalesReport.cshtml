@model backend.ViewModels.Admin.ProductSalesReportViewModel
@{
    ViewData["Title"] = "Product Sales Report";
}
<div class="container mt-4">
    <h2>Product Sales Report</h2>
    <form method="get" class="row g-3 mb-3">
        <div class="col-auto">
            <label class="form-label">Start Date</label>
            <input type="date" name="startDate" class="form-control" value="@Model.Filter.StartDate?.ToString("yyyy-MM-dd")" />
        </div>
        <div class="col-auto">
            <label class="form-label">End Date</label>
            <input type="date" name="endDate" class="form-control" value="@Model.Filter.EndDate?.ToString("yyyy-MM-dd")" />
        </div>
        <div class="col-auto">
            <label class="form-label">Category Id</label>
            <input type="number" name="categoryId" class="form-control" value="@(Model.Filter.CategoryId?.ToString() ?? "")" />
        </div>
        <div class="col-auto align-self-end">
            <button type="submit" class="btn btn-primary">Filter</button>
        </div>
    </form>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Product</th>
                <th class="text-end">Quantity</th>
                <th class="text-end">Revenue</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var item in Model.Items)
        {
            <tr>
                <td>@item.ProductName</td>
                <td class="text-end">@item.TotalQuantity</td>
                <td class="text-end">@item.TotalRevenue.ToString("C")</td>
            </tr>
        }
        </tbody>
        <tfoot>
            <tr>
                <th>Total</th>
                <th class="text-end">@Model.TotalQuantity</th>
                <th class="text-end">@Model.TotalRevenue.ToString("C")</th>
            </tr>
        </tfoot>
    </table>
</div>