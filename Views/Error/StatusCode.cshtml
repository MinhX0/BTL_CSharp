@model int
@{
    // Model is the numeric status code
    var code = Model;
    var title = code switch
    {
        401 => "401 - Không có quyền",
        404 => "404 - Không tìm thấy",
        500 => "500 - Lỗi máy chủ",
        _ => $"{code} - Lỗi"
    };

    var message = code switch
    {
        401 => "Bạn cần đăng nhập để truy cập trang này. Vui lòng đăng nhập và thử lại.",
        404 => "Không tìm thấy trang bạn yêu cầu. Có thể đã bị xóa hoặc bạn đã nhập sai địa chỉ.",
        500 => "Đã xảy ra lỗi trên hệ thống. Chúng tôi đang xử lý — vui lòng thử lại sau.",
        _ => "Đã xảy ra lỗi khi xử lý yêu cầu của bạn."
    };

    ViewData["Title"] = title;
}

<div class="container-fluid pt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 text-center">
            <h1 class="display-4 text-danger">@title</h1>
            <p class="lead">@message</p>
            <div class="mt-3">
                @if (code == 401)
                {
                    <a asp-controller="Account" asp-action="Login" class="btn btn-primary">Đăng nhập</a>
                }
                <a asp-controller="Store" asp-action="Index" class="btn btn-outline-secondary ml-2">Về trang chủ</a>
                <a asp-controller="Store" asp-action="Contact" class="btn btn-link ml-2">Liên hệ hỗ trợ</a>
            </div>
        </div>
    </div>
</div>
