@model backend.ViewModels.Admin.AdminRegisterViewModel
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Đăng ký Admin bí mật";
}
<div class="admin-card" style="max-width:480px; margin:60px auto; border:2px dashed #dc3545;">
    <h3><i class="fas fa-user-secret"></i> Đăng ký Admin (bí mật)</h3>
    <div class="alert alert-danger" style="font-size:13px;">
        <strong>Cảnh báo:</strong> Endpoint này chỉ dùng để thử nghiệm nhanh. Xóa nó trên môi trường production.
    </div>
    <form asp-action="RegisterSecret" method="post">
        <div class="form-group">
            <label asp-for="Username"></label>
            <input asp-for="Username" class="form-control" />
            <span asp-validation-for="Username" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Password"></label>
            <input asp-for="Password" type="password" class="form-control" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-danger btn-block"><i class="fas fa-user-plus"></i> Đăng ký Admin</button>
        <a asp-action="Login" class="btn btn-secondary btn-block mt-2">Quay lại đăng nhập</a>
    </form>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
