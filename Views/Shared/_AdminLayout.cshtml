@{
    var title = ViewData["Title"] as string ?? "Bảng quản trị";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@title</title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport" />

    @await Html.PartialAsync("_Fonts")
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet" />
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/admin.css" rel="stylesheet" />
    @RenderSection("Styles", required: false)
</head>
<body class="admin">
    <div class="admin-sidebar">
        <div class="brand">
            <h3><i class="fas fa-shield-alt"></i> Bảng quản trị</h3>
        </div>
        <nav class="nav flex-column">
            <a asp-controller="Admin" asp-action="Index" class="nav-link @(ViewContext.RouteData.Values["Action"]?.ToString() == "Index" ? "active" : "")">
                <i class="fas fa-tachometer-alt"></i> Tổng quan
            </a>
            <a asp-controller="Admin" asp-action="Products" class="nav-link @(ViewContext.RouteData.Values["Action"]?.ToString() == "Products" ? "active" : "")">
                <i class="fas fa-box"></i> Sản phẩm
            </a>
            <a asp-controller="Admin" asp-action="Categories" class="nav-link @(ViewContext.RouteData.Values["Action"]?.ToString() == "Categories" ? "active" : "")">
                <i class="fas fa-list"></i> Danh mục
            </a>
            <a asp-controller="Admin" asp-action="Orders" class="nav-link @(ViewContext.RouteData.Values["Action"]?.ToString() == "Orders" ? "active" : "")">
                <i class="fas fa-shopping-cart"></i> Đơn hàng
            </a>
            <a asp-controller="Admin" asp-action="Customers" class="nav-link @(ViewContext.RouteData.Values["Action"]?.ToString() == "Customers" ? "active" : "")">
                <i class="fas fa-users"></i> Khách hàng
            </a>
            <hr style="border-color: rgba(255,255,255,0.1);" />
            <a asp-controller="Home" asp-action="Index" class="nav-link" target="_blank">
                <i class="fas fa-store"></i> Xem cửa hàng
            </a>
            <form asp-controller="Account" asp-action="Logout" method="post" style="margin: 0;">
                <button type="submit" class="nav-link" style="width: 100%; text-align: left; background: none; border: none; cursor: pointer;">
                    <i class="fas fa-sign-out-alt"></i> Đăng xuất
                </button>
            </form>
        </nav>
    </div>

    <div class="admin-content">
        <div class="admin-header">
            <h1>@ViewData["Title"]</h1>
            <div class="user-info">
                <span><i class="fas fa-user-shield"></i> @User.Identity?.Name</span>
            </div>
        </div>

        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success">
                <i class="fas fa-check-circle"></i> @TempData["Success"]
            </div>
        }

        @if (TempData["Error"] != null)
        {
            <div class="alert alert-error">
                <i class="fas fa-exclamation-circle"></i> @TempData["Error"]
            </div>
        }

        @RenderBody()
    </div>

    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
