@model ProductDetailViewModel
@using System.Globalization
@{
    ViewData["Title"] = Model?.Name ?? "Chi tiết sản phẩm";
    string FormatPrice(decimal value) => string.Format(CultureInfo.CurrentCulture, "{0:C0}", value);
}

<!-- Breadcrumb Start -->
<div class="container-fluid bg-secondary mb-5">
    <div class="d-flex flex-column align-items-center justify-content-center" style="min-height: 200px">
        <h1 class="font-weight-semi-bold text-uppercase mb-3">@Model?.Name</h1>
        <div class="d-inline-flex">
            <p class="m-0"><a asp-controller="Store" asp-action="Index">Trang chủ</a></p>
            <p class="m-0 px-2">-</p>
            <p class="m-0"><a asp-controller="Store" asp-action="Shop">Cửa hàng</a></p>
            <p class="m-0 px-2">-</p>
            <p class="m-0">Chi tiết sản phẩm</p>
        </div>
    </div>
</div>
<!-- Breadcrumb End -->

<!-- Product Detail Start -->
<div class="container-fluid pb-5">
    <div class="row px-xl-5">
        <div class="col-lg-5 mb-4">
            <div class="border" style="height:340px;display:flex;align-items:center;justify-content:center;">
                <img style="max-width:100%;max-height:320px;width:auto;height:auto;object-fit:contain;" src="@Url.Content(Model?.ImageUrl ?? "~/template/img/product-1.jpg")" alt="@Model?.Name">
            </div>
        </div>
        <div class="col-lg-7">
            <h3 class="font-weight-semi-bold">@Model?.Name</h3>

            @if (!string.IsNullOrWhiteSpace(Model?.CategoryName) || !string.IsNullOrWhiteSpace(Model?.Brand))
            {
                <p class="text-muted mb-2">
                        @if (!string.IsNullOrWhiteSpace(Model?.Brand))
                    {
                        <span class="mr-2"><strong>Thương hiệu:</strong> @Model!.Brand</span>
                    }
                    @if (!string.IsNullOrWhiteSpace(Model?.CategoryName))
                    {
                        <span><strong>Bộ sưu tập:</strong> @Model!.CategoryName</span>
                    }
                </p>
            }

            <div class="d-flex align-items-baseline mb-4">
                <h2 class="font-weight-semi-bold mb-0 text-primary">@FormatPrice((decimal)(Model?.Price ?? 0))</h2>
                @if (Model?.OriginalPrice.HasValue == true)
                {
                    <h5 class="text-muted ml-3"><del>@FormatPrice((decimal)Model!.OriginalPrice!.Value)</del></h5>
                }
                @if ((Model?.Discount ?? 0) > 0)
                {
                    <span class="badge badge-success ml-3">-@Model!.Discount.ToString("0")%</span>
                }
            </div>

            <div class="mb-4">
                <p class="mb-1"><strong>Trạng thái:</strong></p>
                <p class="mb-1">
                    @if ((Model?.StockQuantity ?? 0) > 0)
                    {
                        <span class="text-success">Còn hàng (@Model!.StockQuantity trong kho)</span>
                    }
                    else
                    {
                        <span class="text-danger">Tạm thời hết hàng</span>
                    }
                </p>
            </div>

            <div class="mb-4" style="white-space: pre-line;">
                <p class="mb-4">@Model?.Description</p>
            </div>

            <div class="mb-4">
                @if (!string.IsNullOrWhiteSpace(Model?.MovementType) || !string.IsNullOrWhiteSpace(Model?.Gender) || !string.IsNullOrWhiteSpace(Model?.Material) || !string.IsNullOrWhiteSpace(Model?.Origin))
                {
                    <ul class="list-unstyled mb-0 text-muted">
                        @if (!string.IsNullOrWhiteSpace(Model?.MovementType)) { <li><strong>Movement:</strong> @Model!.MovementType</li> }
                        @if (!string.IsNullOrWhiteSpace(Model?.Gender)) { <li><strong>Designed for:</strong> @Model!.Gender</li> }
                        @if (!string.IsNullOrWhiteSpace(Model?.Material)) { <li><strong>Case &amp; strap:</strong> @Model!.Material</li> }
                        @if (!string.IsNullOrWhiteSpace(Model?.Origin)) { <li><strong>Origin:</strong> @Model!.Origin</li> }
                    </ul>
                }
            </div>

            <div class="d-flex align-items-center mb-4">
                <form asp-controller="Store" asp-action="AddToCart" method="post" class="add-to-cart-detail-form">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="productId" value="@(Model?.ProductId ?? 0)" />
                    <input type="hidden" name="quantity" value="1" />
                    <button type="submit" class="btn btn-primary px-4"><i class="fas fa-shopping-cart mr-2"></i>Thêm vào giỏ</button>
                </form>
                <a asp-controller="Store" asp-action="Shop" class="btn btn-outline-secondary px-4 ml-3">Tiếp tục mua sắm</a>
            </div>
        </div>
    </div>
</div>
<!-- Product Detail End -->

<!-- Specifications Start -->
<div class="container-fluid pb-5">
    <div class="row px-xl-5">
        <div class="col-lg-7 mb-4">
            <div class="border p-4 h-100">
                <h4 class="font-weight-semi-bold mb-3">Mô tả sản phẩm</h4>
                <p class="text-muted" style="white-space: pre-line;">@Model?.Description</p>
            </div>
        </div>
        <div class="col-lg-5">
            <div class="border p-4 h-100">
                <h4 class="font-weight-semi-bold mb-3">Thông số kỹ thuật</h4>
                @if (Model?.Specifications == null || Model.Specifications.Count == 0)
                {
                    <p class="text-muted mb-0">Thông số sẽ được cập nhật sớm.</p>
                }
                else
                {
                    <ul class="list-group list-group-flush">
                        @foreach (var spec in Model.Specifications)
                        {
                            <li class="list-group-item d-flex justify-content-between px-0">
                                <span class="text-muted">@spec.Label</span>
                                <span class="font-weight-medium text-dark">@spec.Value</span>
                            </li>
                        }
                    </ul>
                }
            </div>
        </div>
    </div>
</div>
<!-- Specifications End -->

<!-- Related Products Start -->
@if (Model?.RelatedProducts != null && Model.RelatedProducts.Count > 0)
{
    <div class="container-fluid pt-5">
        <div class="text-center mb-4">
            <h2 class="section-title px-5"><span class="px-2">Có thể bạn thích</span></h2>
        </div>
        <div class="row px-xl-5 pb-3">
            @foreach (var product in Model.RelatedProducts)
            {
                <div class="col-lg-3 col-md-6 col-sm-12 pb-1">
                    <div class="card product-item border-0 mb-4">
                        <div class="card-header product-img position-relative overflow-hidden bg-transparent border p-0" style="height:200px;display:flex;align-items:center;justify-content:center;">
                            <a asp-controller="Store" asp-action="Detail" asp-route-id="@product.ProductId" class="d-block w-100 h-100" style="display:flex;align-items:center;justify-content:center;">
                                <img style="max-width:100%;max-height:180px;width:auto;height:auto;object-fit:contain;" src="@Url.Content(product.ImageUrl ?? "~/template/img/product-1.jpg")" alt="@product.Name">
                            </a>
                            @if (!string.IsNullOrWhiteSpace(product.CategoryName))
                            {
                                <span class="badge badge-primary position-absolute" style="top: 10px; left: 10px;">@product.CategoryName</span>
                            }
                        </div>
                        <div class="card-body border-left border-right text-center p-0 pt-4 pb-3">
                            <h6 class="text-truncate mb-3">
                                <a asp-controller="Store" asp-action="Detail" asp-route-id="@product.ProductId" class="text-dark">@product.Name</a>
                            </h6>
                            <div class="d-flex justify-content-center">
                                <h6>@FormatPrice((decimal)product.Price)</h6>
                                @if (product.OriginalPrice.HasValue)
                                {
                                    <h6 class="text-muted ml-2"><del>@FormatPrice((decimal)product.OriginalPrice.Value)</del></h6>
                                }
                            </div>
                        </div>
                        <div class="card-footer d-flex justify-content-between bg-light border">
                            <a asp-controller="Store" asp-action="Detail" asp-route-id="@product.ProductId" class="btn btn-sm text-dark p-0"><i class="fas fa-eye text-primary mr-1"></i>Xem</a>
                            <form asp-controller="Store" asp-action="AddToCart" method="post" class="m-0 p-0 add-to-cart-form" data-product-id="@product.ProductId">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="productId" value="@product.ProductId" />
                                <input type="hidden" name="quantity" value="1" />
                                <button type="submit" class="btn btn-sm text-dark p-0 add-to-cart-btn"><i class="fas fa-shopping-cart text-primary mr-1"></i>Thêm vào giỏ</button>
                            </form>
                        </div>
                    </div>
                    <script>
                    $(function() {
                        $('.add-to-cart-detail-form').on('submit', function(e) {
                            e.preventDefault();
                            var $form = $(this);
                            var formData = $form.serialize();
                            $.ajax({
                                url: $form.attr('action'),
                                type: 'POST',
                                data: formData,
                                headers: { 'RequestVerificationToken': $form.find('input[name="__RequestVerificationToken"]').val() },
                                success: function() {
                                    showToast('Đã thêm vào giỏ hàng!');
                                },
                                error: function(xhr) {
                                    if (xhr.status === 401) {
                                        window.location = '/Account/Login?returnUrl=' + encodeURIComponent(window.location.pathname);
                                    } else {
                                        showToast('Không thể thêm vào giỏ.', true);
                                    }
                                }
                            });
                        });
                        function showToast(msg, isError) {
                            var $toast = $('<div class="toast position-fixed" style="top:20px;right:20px;z-index:9999;min-width:200px;">'
                                + '<div class="toast-header ' + (isError ? 'bg-danger' : 'bg-success') + ' text-white">'
                                    + '<strong class="mr-auto">Giỏ hàng</strong>'
                                + '<button type="button" class="ml-2 mb-1 close text-white" data-dismiss="toast">&times;</button>'
                                + '</div>'
                                + '<div class="toast-body">' + msg + '</div>'
                                + '</div>');
                            $('body').append($toast);
                            $toast.toast({ delay: 2000 });
                            $toast.toast('show');
                            $toast.on('hidden.bs.toast', function() { $toast.remove(); });
                        }
                    });
                    </script>
                    </div>
            }
        </div>
    </div>
}
<!-- Related Products End -->
