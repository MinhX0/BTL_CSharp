@model backend.ViewModels.Store.CartViewModel
@{
    ViewData["Title"] = "Your Cart";
}
<div class="container pt-5">
    <h2 class="mb-4">Shopping Cart</h2>
    @if (TempData["Success"] != null) {<div class="alert alert-success">@TempData["Success"]</div>}
    @if (TempData["Info"] != null) {<div class="alert alert-info">@TempData["Info"]</div>}
    @if (TempData["Error"] != null) {<div class="alert alert-danger">@TempData["Error"]</div>}
    @if (Model.Items == null || !Model.Items.Any())
    {
        <p class="text-muted">Your cart is empty.</p>
        <a asp-controller="Store" asp-action="Shop" class="btn btn-primary">Continue Shopping</a>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-bordered">
                <thead class="thead-light">
                    <tr>
                        <th>Product</th>
                        <th>Category</th>
                        <th class="text-center" style="width:140px">Quantity</th>
                        <th class="text-right">Unit Price</th>
                        <th class="text-right">Total</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                @foreach (var item in Model.Items)
                {
                    <tr>
                        <td>
                            <div class="d-flex align-items-center">
                                <img src="@Url.Content(item.ImageUrl ?? "~/template/img/product-1.jpg")" alt="@item.Name" style="width:60px;height:60px;object-fit:cover" class="mr-2" />
                                <a asp-controller="Store" asp-action="Detail" asp-route-id="@item.ProductId">@item.Name</a>
                            </div>
                        </td>
                        <td>@item.CategoryName</td>
                        <td class="text-center">
                            <form asp-controller="Store" asp-action="UpdateCart" method="post" class="form-inline justify-content-center">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="productId" value="@item.ProductId" />
                                <input type="number" name="quantity" value="@item.Quantity" min="0" class="form-control form-control-sm" style="width:80px" />
                                <button type="submit" class="btn btn-sm btn-outline-primary ml-2">Update</button>
                            </form>
                        </td>
                        <td class="text-right">@String.Format(System.Globalization.CultureInfo.GetCultureInfo("en-US"), "{0:C0}", item.UnitPrice)</td>
                        <td class="text-right">@String.Format(System.Globalization.CultureInfo.GetCultureInfo("en-US"), "{0:C0}", item.LineTotal)</td>
                        <td>
                            <form asp-controller="Store" asp-action="RemoveFromCart" method="post" class="d-inline">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="productId" value="@item.ProductId" />
                                <button type="submit" class="btn btn-sm btn-danger">Remove</button>
                            </form>
                        </td>
                    </tr>
                }
                </tbody>
                <tfoot>
                    <tr>
                        <th colspan="4" class="text-right">Subtotal</th>
                        <th class="text-right">@String.Format(System.Globalization.CultureInfo.GetCultureInfo("en-US"), "{0:C0}", Model.Subtotal)</th>
                        <th></th>
                    </tr>
                </tfoot>
            </table>
        </div>
        <div class="d-flex justify-content-between mt-3">
            <a asp-controller="Store" asp-action="Shop" class="btn btn-outline-secondary">Continue Shopping</a>
            <a asp-controller="Store" asp-action="Checkout" class="btn btn-primary">Proceed to Checkout</a>
        </div>
    }
</div>
