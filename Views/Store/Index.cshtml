@model IndexViewModel
@using System.Globalization
@{
    ViewData["Title"] = "Cửa hàng";
    string FormatPrice(decimal value) => string.Format(CultureInfo.CurrentCulture, "{0:C0}", value);
}

<!-- Featured Start -->
<div class="container-fluid pt-5">
    <div class="row px-xl-5 pb-3">
        <div class="col-lg-3 col-md-6 col-sm-12 pb-1">
            <div class="d-flex align-items-center border mb-4" style="padding: 30px;">
                <h1 class="fa fa-check text-primary m-0 mr-3"></h1>
                <h5 class="font-weight-semi-bold m-0">Sản phẩm chất lượng</h5>
            </div>
        </div>
        <div class="col-lg-3 col-md-6 col-sm-12 pb-1">
            <div class="d-flex align-items-center border mb-4" style="padding: 30px;">
                <h1 class="fa fa-shipping-fast text-primary m-0 mr-2"></h1>
                <h5 class="font-weight-semi-bold m-0">Miễn phí vận chuyển</h5>
            </div>
        </div>
        <div class="col-lg-3 col-md-6 col-sm-12 pb-1">
            <div class="d-flex align-items-center border mb-4" style="padding: 30px;">
                <h1 class="fas fa-exchange-alt text-primary m-0 mr-3"></h1>
                <h5 class="font-weight-semi-bold m-0">Đổi trả trong 14 ngày</h5>
            </div>
        </div>
        <div class="col-lg-3 col-md-6 col-sm-12 pb-1">
            <div class="d-flex align-items-center border mb-4" style="padding: 30px;">
                <h1 class="fa fa-phone-volume text-primary m-0 mr-3"></h1>
                <h5 class="font-weight-semi-bold m-0">Hỗ trợ 24/7</h5>
            </div>
        </div>
    </div>
</div>
<!-- Featured End -->

<!-- Categories Start -->
<div class="container-fluid pt-5">
    <div class="row px-xl-5 pb-3">
        @if (Model.Categories == null || Model.Categories.Count == 0)
        {
            <div class="col-12 text-center">
                <p class="text-muted mb-0">Chưa có danh mục nào.</p>
            </div>
        }
        else
        {
            foreach (var category in Model.Categories)
            {
                <div class="col-lg-4 col-md-6 pb-1">
                    <div class="cat-item d-flex flex-column border mb-4" style="padding: 30px;">
                        <p class="text-right">@category.ProductCount Models</p>
                        <a asp-controller="Store" asp-action="Shop" asp-route-categoryId="@category.CategoryId" class="cat-img position-relative overflow-hidden mb-3">
                            <img class="img-fluid" src="@Url.Content(category.ImageUrl ?? "~/template/img/cat-1.jpg")" alt="@category.Name">
                        </a>
                        <h5 class="font-weight-semi-bold m-0">@category.Name</h5>
                    </div>
                </div>
            }
        }
    </div>
</div>
<!-- Categories End -->

<!-- Trending Products Start -->
<div class="container-fluid pt-5">
        <div class="text-center mb-4">
        <h2 class="section-title px-5"><span class="px-2">Đồng hồ nổi bật</span></h2>
    </div>
    <div class="row px-xl-5 pb-3">
        @if (Model.TrendingProducts == null || Model.TrendingProducts.Count == 0)
        {
            <div class="col-12 text-center">
                <p class="text-muted mb-0">Chưa có sản phẩm nổi bật. Vui lòng quay lại sau.</p>
            </div>
        }
        else
        {
            foreach (var product in Model.TrendingProducts)
            {
                <div class="col-lg-3 col-md-6 col-sm-12 pb-1">
                    <div class="card product-item border-0 mb-4">
                        <div class="card-header product-img position-relative overflow-hidden bg-transparent border p-0" style="height:200px;display:flex;align-items:center;justify-content:center;">
                            <a asp-controller="Store" asp-action="Detail" asp-route-id="@product.ProductId" class="d-block w-100 h-100" style="display:flex;align-items:center;justify-content:center;">
                                <img style="max-width:100%;max-height:180px;width:auto;height:auto;object-fit:contain;" src="@Url.Content(product.ImageUrl ?? "~/template/img/product-1.jpg")" alt="@product.Name">
                            </a>
                            @if (!string.IsNullOrWhiteSpace(product.CategoryName))
                            {
                                <span class="badge badge-primary position-absolute" style="top: 10px; left: 10px;">@product.CategoryName</span>
                            }
                        </div>
                        <div class="card-body border-left border-right text-center p-0 pt-4 pb-3">
                            <h6 class="text-truncate mb-3">
                                <a asp-controller="Store" asp-action="Detail" asp-route-id="@product.ProductId" class="text-dark">@product.Name</a>
                            </h6>
                            <div class="d-flex justify-content-center">
                                <h6>@FormatPrice((decimal)product.Price)</h6>
                                @if (product.OriginalPrice.HasValue)
                                {
                                    <h6 class="text-muted ml-2"><del>@FormatPrice((decimal)product.OriginalPrice.Value)</del></h6>
                                }
                            </div>
                        </div>
                        <div class="card-footer d-flex justify-content-between bg-light border">
                            <a asp-controller="Store" asp-action="Detail" asp-route-id="@product.ProductId" class="btn btn-sm text-dark p-0"><i class="fas fa-eye text-primary mr-1"></i>Xem</a>
                            <form asp-controller="Store" asp-action="AddToCart" method="post" class="m-0 p-0 add-to-cart-form" data-product-id="@product.ProductId">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="productId" value="@product.ProductId" />
                                <input type="hidden" name="quantity" value="1" />
                                <button type="submit" class="btn btn-sm text-dark p-0 add-to-cart-btn"><i class="fas fa-shopping-cart text-primary mr-1"></i>Thêm vào giỏ</button>
                            </form>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
</div>
<!-- Trending Products End -->

<!-- New Arrivals Start -->
<div class="container-fluid pt-5">
    <div class="text-center mb-4">
        <h2 class="section-title px-5"><span class="px-2">Hàng mới về</span></h2>
    </div>
    <div class="row px-xl-5 pb-3">
        @if (Model.NewArrivals == null || Model.NewArrivals.Count == 0)
        {
            <div class="col-12 text-center">
                <p class="text-muted mb-0">Chưa có hàng mới. Vui lòng quay lại sau.</p>
            </div>
        }
        else
        {
            foreach (var product in Model.NewArrivals)
            {
                <div class="col-lg-3 col-md-6 col-sm-12 pb-1">
                    <div class="card product-item border-0 mb-4">
                        <div class="card-header product-img position-relative overflow-hidden bg-transparent border p-0" style="height:200px;display:flex;align-items:center;justify-content:center;">
                            <a asp-controller="Store" asp-action="Detail" asp-route-id="@product.ProductId" class="d-block w-100 h-100" style="display:flex;align-items:center;justify-content:center;">
                                <img style="max-width:100%;max-height:180px;width:auto;height:auto;object-fit:contain;" src="@Url.Content(product.ImageUrl ?? "~/template/img/product-1.jpg")" alt="@product.Name">
                            </a>
                            @if (!string.IsNullOrWhiteSpace(product.CategoryName))
                            {
                                <span class="badge badge-primary position-absolute" style="top: 10px; left: 10px;">@product.CategoryName</span>
                            }
                        </div>
                        <div class="card-body border-left border-right text-center p-0 pt-4 pb-3">
                            <h6 class="text-truncate mb-3">
                                <a asp-controller="Store" asp-action="Detail" asp-route-id="@product.ProductId" class="text-dark">@product.Name</a>
                            </h6>
                            <div class="d-flex justify-content-center">
                                <h6>@FormatPrice((decimal)product.Price)</h6>
                                @if (product.OriginalPrice.HasValue)
                                {
                                    <h6 class="text-muted ml-2"><del>@FormatPrice((decimal)product.OriginalPrice.Value)</del></h6>
                                }
                            </div>
                        </div>
                        <div class="card-footer d-flex justify-content-between bg-light border">
                            <a asp-controller="Store" asp-action="Detail" asp-route-id="@product.ProductId" class="btn btn-sm text-dark p-0"><i class="fas fa-eye text-primary mr-1"></i>Xem</a>
                            <form asp-controller="Store" asp-action="AddToCart" method="post" class="m-0 p-0 add-to-cart-form" data-product-id="@product.ProductId">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="productId" value="@product.ProductId" />
                                <input type="hidden" name="quantity" value="1" />
                                <button type="submit" class="btn btn-sm text-dark p-0 add-to-cart-btn"><i class="fas fa-shopping-cart text-primary mr-1"></i>Thêm vào giỏ</button>
                            </form>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
</div>
<!-- New Arrivals End -->

@section Scripts {
    <script>
    $(function() {
        $('.add-to-cart-form').on('submit', function(e) {
            e.preventDefault();
            var $form = $(this);
            var formData = $form.serialize();
            $.ajax({
                url: $form.attr('action'),
                type: 'POST',
                data: formData,
                headers: { 'RequestVerificationToken': $form.find('input[name="__RequestVerificationToken"]').val() },
                success: function() {
                    showToast('Đã thêm vào giỏ hàng!');
                },
                error: function(xhr) {
                    if (xhr.status === 401) {
                        window.location = '/Account/Login?returnUrl=' + encodeURIComponent(window.location.pathname);
                    } else {
                        showToast('Không thể thêm vào giỏ.', true);
                    }
                }
            });
        });
        
        function showToast(msg, isError) {
            var $toast = $('<div class="toast position-fixed" style="top:20px;right:20px;z-index:9999;min-width:200px;">' +
                '<div class="toast-header ' + (isError ? 'bg-danger' : 'bg-success') + ' text-white">' +
                    '<strong class="mr-auto">Giỏ hàng</strong>' +
                '<button type="button" class="ml-2 mb-1 close text-white" data-dismiss="toast">&times;</button>' +
                '</div>' +
                '<div class="toast-body">' + msg + '</div>' +
                '</div>');
            $('body').append($toast);
            $toast.toast({ delay: 2000 });
            $toast.toast('show');
            $toast.on('hidden.bs.toast', function() { $toast.remove(); });
        }
    });
    </script>
}
