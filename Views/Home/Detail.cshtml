@model ProductDetailViewModel
@using System.Globalization
@{
    ViewData["Title"] = Model.Name;

    string FormatPrice(long value) => $"{value:N0} ₫";
}

<!-- Breadcrumb Start -->
<div class="container-fluid bg-secondary mb-5">
    <div class="d-flex flex-column align-items-center justify-content-center" style="min-height: 260px">
        <h1 class="font-weight-semi-bold text-uppercase mb-3">@Model.Name</h1>
        <div class="d-inline-flex">
            <p class="m-0"><a asp-controller="Store" asp-action="Index">Trang chủ</a></p>
            <p class="m-0 px-2">-</p>
            <p class="m-0"><a asp-controller="Store" asp-action="Shop">Cửa hàng</a></p>
            <p class="m-0 px-2">-</p>
            <p class="m-0">Chi tiết sản phẩm</p>
        </div>
    </div>
</div>
<!-- Breadcrumb End -->

<!-- Product Detail Start -->
<div class="container-fluid pb-5">
    <div class="row px-xl-5">
        <div class="col-lg-5 mb-4">
            <div class="border">
                <img class="img-fluid w-100" src="@Url.Content(Model.ImageUrl ?? "~/template/img/product-1.jpg")" alt="@Model.Name">
            </div>
        </div>
        <div class="col-lg-7">
            <h3 class="font-weight-semi-bold">@Model.Name</h3>
            @if (!string.IsNullOrWhiteSpace(Model.CategoryName) || !string.IsNullOrWhiteSpace(Model.Brand))
            {
                <p class="text-muted mb-2">
                    @if (!string.IsNullOrWhiteSpace(Model.Brand))
                    {
                        <span class="mr-2"><strong>Thương hiệu:</strong> @Model.Brand</span>
                    }
                    @if (!string.IsNullOrWhiteSpace(Model.CategoryName))
                    {
                        <span><strong>Bộ sưu tập:</strong> @Model.CategoryName</span>
                    }
                </p>
            }

            <div class="d-flex align-items-baseline mb-4">
                <h2 class="font-weight-semi-bold mb-0 text-primary">@FormatPrice(Model.Price)</h2>
                @if (Model.HasDiscount && Model.OriginalPrice.HasValue)
                {
                    <h5 class="text-muted ml-3"><del>@FormatPrice(Model.OriginalPrice.Value)</del></h5>
                    <span class="badge badge-success ml-3">-@Model.Discount.ToString("0")%</span>
                }
            </div>

            <p class="mb-4" style="white-space: pre-line;">@Model.Description</p>

            <div class="mb-4">
                <p class="mb-1">
                    <strong>Trạng thái:</strong>
                    @if (Model.InStock)
                    {
                        <span class="text-success">Còn hàng (@Model.StockQuantity trong kho)</span>
                    }
                    else
                    {
                        <span class="text-danger">Tạm thời hết hàng</span>
                    }
                </p>
                @if (!string.IsNullOrWhiteSpace(Model.MovementType) || !string.IsNullOrWhiteSpace(Model.Gender) || !string.IsNullOrWhiteSpace(Model.Material) || !string.IsNullOrWhiteSpace(Model.Origin))
                {
                    <ul class="list-unstyled mb-0 text-muted">
                        @if (!string.IsNullOrWhiteSpace(Model.MovementType))
                        {
                            <li><strong>Movement:</strong> @Model.MovementType</li>
                        }
                        @if (!string.IsNullOrWhiteSpace(Model.Gender))
                        {
                            <li><strong>Designed for:</strong> @Model.Gender</li>
                        }
                        @if (!string.IsNullOrWhiteSpace(Model.Material))
                        {
                            <li><strong>Case &amp; strap:</strong> @Model.Material</li>
                        }
                        @if (!string.IsNullOrWhiteSpace(Model.Origin))
                        {
                            <li><strong>Origin:</strong> @Model.Origin</li>
                        }
                    </ul>
                }
            </div>

            <div class="d-flex align-items-center mb-4">
                <a asp-controller="Store" asp-action="Cart" class="btn btn-primary px-4"><i class="fas fa-shopping-cart mr-2"></i>Thêm vào giỏ</a>
                <a asp-controller="Store" asp-action="Shop" class="btn btn-outline-secondary px-4 ml-3">Tiếp tục mua sắm</a>
            </div>
        </div>
    </div>
</div>
<!-- Product Detail End -->

<!-- Specifications Start -->
<div class="container-fluid pb-5">
    <div class="row px-xl-5">
        <div class="col-lg-7 mb-4">
            <div class="border p-4 h-100">
                <h4 class="font-weight-semi-bold mb-3">Mô tả sản phẩm</h4>
                <p class="text-muted" style="white-space: pre-line;">@Model.Description</p>
            </div>
        </div>
        <div class="col-lg-5">
            <div class="border p-4 h-100">
                <h4 class="font-weight-semi-bold mb-3">Thông số kỹ thuật</h4>
                @if (Model.Specifications.Count == 0)
                {
                    <p class="text-muted mb-0">Thông số sẽ được cập nhật sớm.</p>
                }
                else
                {
                    <ul class="list-group list-group-flush">
                        @foreach (var spec in Model.Specifications)
                        {
                            <li class="list-group-item d-flex justify-content-between px-0">
                                <span class="text-muted">@spec.Label</span>
                                <span class="font-weight-medium text-dark">@spec.Value</span>
                            </li>
                        }
                    </ul>
                }
            </div>
        </div>
    </div>
</div>
<!-- Specifications End -->

<!-- Related Products Start -->
@if (Model.RelatedProducts.Count > 0)
{
    <div class="container-fluid pt-5">
        <div class="text-center mb-4">
            <h2 class="section-title px-5"><span class="px-2">You May Also Like</span></h2>
        </div>
        <div class="row px-xl-5 pb-3">
            @foreach (var product in Model.RelatedProducts)
            {
                <div class="col-lg-3 col-md-6 col-sm-12 pb-1">
                    <div class="card product-item border-0 mb-4">
                        <div class="card-header product-img position-relative overflow-hidden bg-transparent border p-0" style="height: 300px;">
                            <a asp-controller="Store" asp-action="Detail" asp-route-id="@product.ProductId" class="d-block h-100">
                                <img class="img-fluid w-100 h-100" src="@Url.Content(product.ImageUrl ?? "~/template/img/product-1.jpg")" alt="@product.Name" style="object-fit: cover;">
                            </a>
                            @if (!string.IsNullOrWhiteSpace(product.CategoryName))
                            {
                                <span class="badge badge-primary position-absolute" style="top: 10px; left: 10px;">@product.CategoryName</span>
                            }
                        </div>
                        <div class="card-body border-left border-right text-center p-0 pt-4 pb-3">
                            <h6 class="text-truncate mb-3"><a asp-controller="Store" asp-action="Detail" asp-route-id="@product.ProductId" class="text-dark">@product.Name</a></h6>
                            <div class="d-flex justify-content-center">
                                <h6>@FormatPrice(product.Price)</h6>
                                @if (product.HasDiscount && product.OriginalPrice.HasValue)
                                {
                                    <h6 class="text-muted ml-2"><del>@FormatPrice(product.OriginalPrice.Value)</del></h6>
                                }
                            </div>
                        </div>
                        <div class="card-footer d-flex justify-content-between bg-light border">
                            <a asp-controller="Store" asp-action="Detail" asp-route-id="@product.ProductId" class="btn btn-sm text-dark p-0"><i class="fas fa-eye text-primary mr-1"></i>Xem</a>
                            <a asp-controller="Store" asp-action="Cart" class="btn btn-sm text-dark p-0"><i class="fas fa-shopping-cart text-primary mr-1"></i>Thêm vào giỏ</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
}
<!-- Related Products End -->
